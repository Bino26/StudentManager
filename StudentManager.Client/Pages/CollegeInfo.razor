@page "/collegeinfo"

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to your college page info</MudText>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8 mx-auto">
    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h5">College Information</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body1">
                Welcome to our college! Here you will find information about our programs, faculties, and campus life.
            </MudText>
            <MudDivider Class="my-4" />
            <MudText Typo="Typo.h6">Programs Offered</MudText>
            <MudList>
                <MudListItem>Computer Science</MudListItem>
                <MudListItem>Business Administration</MudListItem>
                <MudListItem>Engineering</MudListItem>
                <MudListItem>Health Sciences</MudListItem>
            </MudList>
            <MudDivider Class="my-4" />
            <MudText Typo="Typo.h6">Faculty Members</MudText>
            <MudList>
                <MudListItem>Dr. Jane Doe - Dean of Computer Science</MudListItem>
                <MudListItem>Dr. John Smith - Dean of Business Administration</MudListItem>
                <MudListItem>Dr. Alice Johnson - Dean of Engineering</MudListItem>
                <MudListItem>Dr. Michael Brown - Dean of Health Sciences</MudListItem>
            </MudList>
            <MudDivider Class="my-4" />
            <MudText Typo="Typo.h6">Campus Life</MudText>
            <MudText Typo="Typo.body1">
                Our campus offers a vibrant and diverse community with numerous clubs, organizations, and events to participate in.
            </MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Color="Color.Primary" Variant="Variant.Filled">Learn More</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>
